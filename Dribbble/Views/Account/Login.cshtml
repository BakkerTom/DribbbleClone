@model Dribbble.Models.Account
@{
    ViewBag.Title = "Login";
}

<div class="page-header">
    <h2>Sign In</h2>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login failed", new {@class = ""});
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <fieldset>
                    <div class="editor-field form-group">
                        <label>User Name</label>
                        @Html.TextBoxFor(u => u.AccountName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(u => u.AccountName)
                    </div>

                    <div class="editor-field form-group">
                        <label>Password</label>
                        @Html.PasswordFor(u => u.Password, new {@class = "form-control"})
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                    <div class="editor-label form-group">
                        @Html.CheckBoxFor(u => u.RememberMe)
                        <span>Remember Me</span>
                    </div>
                </fieldset>

                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
