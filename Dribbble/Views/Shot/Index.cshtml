@{
    ViewBag.Title = "Shots";
}

@model IEnumerable<Dribbble.Models.Shot>

<div class="page-header">
    @if (Request.IsAuthenticated)
    {
      @Html.ActionLink("New Post", "New", "Shot", new { area = "" }, new { @class = "btn btn-primary pull-right" })
    }
    <h2>Popular</h2>
</div>


<div class="row">
   @foreach (var item in Model)
   {
    <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
            <img alt="@item.Title" src="~/Content/uploads/@item.ImageURL">
            <div class="caption">
                <span>@item.Title</span>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </div>
        </div>
    </div>
   }  
</div>
       


