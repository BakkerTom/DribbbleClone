
@{
    ViewBag.Title = "Show";
}

@model Dribbble.Models.Shot


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="page-header">
            <h2>@Model.Title</h2>
            <span>By @Model.GetAccount().Name on @Model.CreationDate.Date.ToLongDateString()</span>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="thumbnail">
                    <img alt="@Model.Title" src="~/Content/uploads/@Model.ImageURL">
                </div>
                <p></p>
                <p>@Model.Description</p>

                <div class="page-header">
                    <h4>Responses</h4>
                </div>

                @foreach (var item in Model.Comments)
                {
                    <a href="#">@item.Account.Name</a>
                    <p>@item.Message</p>
                    <hr/>
                }

                <form class="form-inline">
                    <div class="form-group">
                        <input type="text" placeholder="Have something to say?" class="form-control" /> 
                    </div>
                    <button type="submit" class="btn btn-default">Post</button>
                </form>
            </div>
            <div class="col-md-4">
                <a href="#"><span class="glyphicon glyphicon-share-alt"></span> Share</a>
                <hr/>
                <a href="#"><span class="glyphicon glyphicon-heart"></span> @Model.Likes likes</a>

                <div class="page-header">
                    <span>Tags</span>
                </div>
            </div>
        </div>
    </div>
</div>



